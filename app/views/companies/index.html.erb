<h1 class="mt-5 text-muted"><span class="bi bi-briefcase-fill"></span> Aliados Comerciales</h1>
<hr>

<% if @companies.count <= 0 %>

<section class="section section-empty-container">
  <div class="section-empty">
    <div class="container has-text-centered">
       <h4 class="subtitle">
        Aún no hay datos - Sé el primero en  <strong><%= link_to "Crear un nuevo registro", new_company_path, class: 'btn boton_personalizado btn' %></strong>
      </h4>
    </div>
  </div>  
</section>

<% else %>

<div class="d-block text-end">
	<%= link_to " Añadir A.C", new_company_path , class: 'bi bi-plus-square-fill btn boton_personalizado' %>
</div>
<div class="table table-responsive">
	<table class="table mt-2 table-striped table-hover table-sm  table-bordered">
	<tr class="bg-dark text-light">
		<td class="fw-bold">Aliado comercial</td>
		<td class="fw-bold">Interventor</td>
		<td class="fw-bold">Correo Electrónico</td>
		<td class="fw-bold text-center">Teléfono</td>
		<td class="fw-bold text-center">Celular</td>	
		<td class="fw-bold text-center">Cantidad de Sedes</td>
	</tr>

<% @companies.each do |company| %>
	<tr>
		<td><%= link_to company.name_company.upcase, company_path(company) %></td>
		<td><%= company.controller.titleize %></td>
		<td><%= mail_to company.email.downcase %></td>
		<td class="text-center"><%= company.phone %></td>
		<td><%= company.cellphone %></td>
		<td class="text-center"><%= company.quantityoffice.round %></td>
     </tr>
	<% end %>
</table>
</div>

<p class="text-end">
  <span class="fw-bold">Descargar Datos: </span>
  <%= link_to "CSV", companies_path(format: "csv"), class: 'bi bi-file-spreadsheet' %> 
  <%= link_to "Excel", companies_path(format: "xls"), class: 'bi bi-file-earmark-spreadsheet' %>
</p>

<% end %>

